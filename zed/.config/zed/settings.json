// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)

{
  "lsp_highlight_debounce": 575,
  "diagnostics": {
    "lsp_pull_diagnostics": {
      "debounce_ms": 550
    },
    "inline": {
      "update_debounce_ms": 1050
    }
  },
  "completions": {
    "lsp_fetch_timeout_ms": 0
  },
  "icon_theme": "Catppuccin Mocha",
  "show_edit_predictions": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 2000
    }
  },

  // Use zed commit editor
  "terminal": {
    "line_height": "standard",
    "font_family": "FiraMono Nerd Font",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  "soft_wrap": "editor_width",
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },

  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#000000bc",

    "toolbar.background": "#282c3344",
    "tab_bar.background": "#282c3344",

    "panel.background": "#2f343e33",
    "editor.background": "#2f343e44",
    "terminal.background": "#2f343e44"
  },

  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet"
    },
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Python": {
      "language_servers": ["ruff", "pylsp"],
      "format_on_save": "on"
    }
  },

  "lsp": {
    "pylsp": {
      "settings": {
        "plugins": {
          "pycodestyle": {"enabled": true,"ignore": ["W191", "F704", "E501"]},
          "mypy": {"enabled": false},
          "pylsp_mypy": {"enabled": false},
          "pyflakes": {"enabled": false},
  
          "jedi_completion": { "enabled": true },
          "jedi_hover": { "enabled": true },
          "jedi_references": { "enabled": true },
          "jedi_signature_help": { "enabled": true },
          "jedi_symbols": { "enabled": true },
          "rope_completion": { "enabled": true }
        }
      }
    }
  },

  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  }
}
