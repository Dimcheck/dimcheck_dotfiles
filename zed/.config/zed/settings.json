// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)

{
  "icon_theme": "Catppuccin Mocha",
  "show_edit_predictions": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },

  // Use zed commit editor
  "terminal": {
    // use detect_env inside project settings
    // "detect_venv": {
    // "on": {
    // "directories": [".venv"],
    // "activate_script": "default"
    // }
    // }
    "line_height": "standard",
    "font_family": "FiraMono Nerd Font",
    "env": {
      "EDITOR": "zed --wait"
    }
  },

  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "enable_vim_sneak": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  "soft_wrap": "editor_width",
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },

  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#000000bc",
    // "title_bar.background": "#282c334f",

    "toolbar.background": "#282c3344",
    "tab_bar.background": "#282c3344",

    "panel.background": "#2f343e33",
    "editor.background": "#2f343e44",
    "terminal.background": "#2f343e44"
  },

  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Python": {
      "language_servers": ["ruff", "pylsp"],
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pylsp": {
      "initialization_options": {
        "plugins": {
          "jedi_completion": { "enabled": true },
          "jedi_hover": { "enabled": true },
          "jedi_references": { "enabled": true },
          "jedi_signature_help": { "enabled": true },
          "jedi_symbols": { "enabled": true },
          "pylint": { "enabled": false },
          "pycodestyle": { "enabled": false },
          "pyflakes": { "enabled": false },
          "rope_completion": { "enabled": true }
        }
      }
    }
  },
  // File syntax highlighting
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  }
}
